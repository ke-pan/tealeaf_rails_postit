<% unless @post.errors.empty? %>
  <div class="alert alert-error">
    <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="well">
  <%= form_for @post do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %> <br/>
    <%= f.label :url %>
    <%= f.text_field :url %> <br/>
    <%= f.label :description %>
    <%= f.text_area :description %> <br/>
    <%= f.submit class: "btn btn-primary" %>

  <% end %>
</div>