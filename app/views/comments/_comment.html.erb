<% show_post ||= false %>

<div class="row">
  <div class="well span text-center">
    <%= link_to(vote_post_comment_path(comment.post, comment, 'vote' => 'true'), method: 'post')  do %>
      <i class="icon-arrow-up"></i>
    <% end %>
    <br/>
    <%= pluralize(comment.total_votes, "vote") %>
    <br/>
    <%= link_to(vote_post_comment_path(comment.post, comment, 'vote' => 'false'), method: 'post')  do %>
      <i class="icon-arrow-down"></i>
    <% end %>
  </div>
  <div class="well span8">
    <p>
      "<%= comment.body %>"
      <% if show_post %>
        on <%= link_to comment.post.title, post_path(comment.post) %>
      <% end %>
    </p>
    <p>
      <span class="quiet">by</span> <%= link_to comment.user.username, user_path(comment.user) %>
      <small>at <%= format_time(comment.created_at) %></small>
    </p>
  </div>
</div>