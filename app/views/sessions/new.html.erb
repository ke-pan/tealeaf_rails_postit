<%= render 'share/header', content: "Log in" %>

<div class="well">
  <%= form_tag do %>
    <div class="control-group">
      <%= label_tag :username %>
      <%= text_field_tag :username %>
    </div>
    <div class="control-group">
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>
    <%= submit_tag "Log in", class: "btn btn-success" %>
  <% end %>
</div>