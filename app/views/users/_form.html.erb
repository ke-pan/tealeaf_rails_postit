<%= render 'share/error', obj: @user %>

<div class="well">
  <%= form_for @user do |f| %>
    <div class="control-group">
      <%= f.label :username %>
      <%= f.text_field :username %>
    </div>
    <div class="control-group">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div class="control-group">
      <%= f.label :timezone %>
      <%= f.time_zone_select :timezone, [ActiveSupport::TimeZone['Beijing']] %>
    </div>
    <%= f.submit (@user.new_record? ? "Sign up" : "Update profile"), class: "btn btn-primary" %>
  <% end %>
</div>